{% if
    app.request.attributes.get('_route') == 'app_login' or
    app.request.attributes.get('_route') == 'app_register'
%}

{% else %}

<!-- Start Navbar Area -->
<div class="navbar-area">
    <div class="vegan-responsive-nav">
        <div class="container">
            <div class="vegan-responsive-menu">
                <div class="logo">
                    {% if app.request.attributes.get('_route') == 'app_home_user' %}
                        <a href="#">
                            <img src="{{ asset('build/images/logo.png') }}" class="white-logo" alt="logo">
                            <img src="{{ asset('build/images/logo-black.png') }}" class="black-logo" alt="logo">
                        </a>
                    {% else %}
                        <a href="{{ path('app_home_user') }}">
                            <img src="{{ asset('build/images/logo.png') }}" class="white-logo" alt="logo">
                            <img src="{{ asset('build/images/logo-black.png') }}" class="black-logo" alt="logo">
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="vegan-nav">
        <div class="container">
            <nav class="navbar navbar-expand-md navbar-light">
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('build/images/logo.png') }}" class="white-logo" alt="logo">
                    <img src="{{ asset('build/images/logo-black.png') }}" class="black-logo" alt="logo">
                </a>
                <div class="collapse navbar-collapse mean-menu" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            {% if app.request.attributes.get('_route') == 'app_home_user' %}
                                <a href="#" class="nav-link">Accueil</a>
                            {% else %}
                                <a href="{{ path('app_home_user') }}" class="nav-link">Accueil</a>
                            {% endif %}
                        </li>
                        <li class="nav-item">
                            {% if app.request.attributes.get('_route') == 'app_carte_user' %}
                                <a href="#" class="nav-link">La Carte</a>
                            {% else %}
                                <a href="{{ path('app_carte_user') }}" class="nav-link">La Carte</a>
                            {% endif %}
                        </li>
                        <li class="nav-item">
                            {% if app.request.attributes.get('_route') == 'app_about_user' %}
                                <a href="#" class="nav-link">A Propos</a>
                            {% else %}
                                <a href="{{ path('app_about_user') }}" class="nav-link">A Propos</a>
                            {% endif %}
                        </li>
                    </ul>
                    <div class="other-option">
                        <a class="default-btn" href="#">A voir</a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>
<!-- End Navbar Area -->

{% endif %}